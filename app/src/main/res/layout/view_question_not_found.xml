<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:scrollbars="none">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="36dp">

        <com.example.mechanic2.views.MyTextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/question_not_found"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/btn_add_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_request_goods"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:tint="@color/indigo_900" />

            <com.example.mechanic2.views.MyTextView
                style="@style/TextAppearance.Medium.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:text="@string/add_new_question"
                android:textColor="@color/indigo_900" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btn_show_all_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_add_question"
            android:layout_alignLeft="@id/btn_add_question"
            android:layout_alignRight="@id/btn_add_question"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_all_goods"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:src="@drawable/ic_all"
                android:tint="@color/light_green_800" />

            <com.example.mechanic2.views.MyTextView
                style="@style/TextAppearance.Medium.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:text="@string/show_all_questions"
                android:textColor="@color/light_green_800" />

        </RelativeLayout>




    </RelativeLayout>


</ScrollView>