<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:blurkit="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    android:fitsSystemWindows="true">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo_900"
        android:theme="@style/AppTheme.AppBarOverlay">




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_scrollFlags="scroll|enterAlways">

            <RelativeLayout
                android:id="@+id/submit_filter_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/car_question_parent"
                android:layout_alignBottom="@id/title_question_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/rectangle_inactive_stoke"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="0dp"
                android:paddingRight="8dp"
                android:paddingBottom="0dp">

                <TextView
                    android:id="@+id/submit_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="جستجو کن"
                    android:textColor="@color/lime_700"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    android:visibility="invisible" />

                <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/loading"
                    style="@style/SpinKitView.Large.FadingCircle"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:visibility="visible" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/car_question_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/submit_filter_parent"
                android:background="@drawable/rectangle_zero_radius_inactive_stoke"
                android:completionThreshold="1"
                android:hint="ماشینت چیه؟"
                android:layoutDirection="rtl"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:paddingRight="8dp"
                android:paddingBottom="2dp"
                android:textColor="@color/grey_10"
                android:textColorHint="@color/blue_grey_300"
                android:textSize="16sp">

                <AutoCompleteTextView
                    android:id="@+id/car_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:completionThreshold="2"
                    android:hint="درباره چه ماشینی سوال داری؟"
                    android:layoutDirection="rtl"
                    android:textColor="@color/grey_10"
                    android:textColorHint="@color/blue_grey_300"
                    android:textSize="16sp" />

                <ImageView
                    android:visibility="invisible"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="0dp"
                    android:paddingLeft="5dp"
                    android:id="@+id/reset_car"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/title_question_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_question_parent"
                android:layout_alignLeft="@id/car_question_parent"
                android:layout_alignRight="@id/car_question_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rectangle_zero_radius_inactive_stoke"
                android:completionThreshold="1"
                android:layoutDirection="rtl"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:paddingRight="8dp"
                android:paddingBottom="2dp">

                <AutoCompleteTextView
                    android:id="@+id/title_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:completionThreshold="2"
                    android:hint="موضوع سوالت چیه؟"
                    android:layoutDirection="rtl"
                    android:textColor="@color/grey_10"
                    android:textColorHint="@color/blue_grey_300"
                    android:textSize="16sp" />

                <ImageView
                    android:visibility="invisible"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="0dp"
                    android:paddingLeft="5dp"
                    android:id="@+id/reset_title"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close"
                    />
            </RelativeLayout>


        </RelativeLayout>






        <!--  ########3  -->

        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_marginRight="16sp"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ترتیب سوالات بر اساس:"
                />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_filter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/btn_inactive_stoke"
                android:entries="@array/question_filter"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/myQuestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_inactive_stoke"
                android:clickable="true"
                android:gravity="center"
                android:padding="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="12sp"
                android:text="سوالات من "
                android:textColor="@color/grey_10" />


        </LinearLayout>






    </com.google.android.material.appbar.AppBarLayout>


    <View
        android:id="@+id/transparent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#9AF44336" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerQuestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <RelativeLayout
        android:id="@+id/fab_parent_layout"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom">

        <LinearLayout
            android:id="@+id/fab_add_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fillet_add_store"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/plus_fab"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                app:lottie_rawRes="@raw/fab_plus2"

                />

            <TextView
                android:id="@+id/fab_add"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="افزودن سوال"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fab_my_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fillet_add_store"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/person_fab"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                app:lottie_rawRes="@raw/my_fab"

                />

            <TextView
                android:id="@+id/fab_my"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="سوالات من"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fab_main_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fillet_add_store"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/close_fab"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                app:lottie_rawRes="@raw/close_fab"

                />

            <TextView
                android:id="@+id/fab_main"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="یه چیزی بگو"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>