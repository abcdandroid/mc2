                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/ivPlayPause"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:alpha="0"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:src="@drawable/play_lottie"
                        android:visibility="gone" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/ltPlayPause"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:visibility="gone"
                        app:lottie_autoPlay="false"
                        app:lottie_loop="false"
                        app:lottie_rawRes="@raw/play_to_pause"
                        app:lottie_speed="3" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/play_lottie"
                            android:visibility="invisible" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/p_lottie" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <com.example.mechanic2.views.MyTextView
                            android:id="@+id/percentDone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="12sp" />


                        <com.hmomeni.progresscircula.ProgressCircula
                            android:id="@+id/progressCirculaSound"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:layout_margin="4dp"
                            android:visibility="gone"
                            app:pgc_indeterminate="false"
                            app:pgc_progress="0"
                            app:pgc_rimColor="@color/colorPrimary"
                            app:pgc_rimWidth="2dp"
                            app:pgc_showProgress="false"
                            app:pgc_speed="4"
                            app:pgc_textColor="#006300" />
                    </RelativeLayout>
                </RelativeLayout>


                <SeekBar
                    android:id="@+id/sbProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</ScrollView>-->
