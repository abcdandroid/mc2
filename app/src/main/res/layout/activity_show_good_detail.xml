    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    tools:context=".activities.ShowGoodDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo_900"
        android:layoutDirection="ltr">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="220dp" />


        <com.merhold.extensiblepageindicator.ExtensiblePageIndicator
            android:id="@+id/flexibleIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewpager"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            app:indicatorActiveColor="@color/red_full"
            app:indicatorInactiveColor="@color/grey_10"
            app:indicatorPadding="8dp"
            app:indicatorRadius="4dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/parent_good_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flexibleIndicator"
            android:layout_marginLeft="@dimen/spacing_smlarge"
            android:layout_marginTop="4dp"
            android:layout_marginRight="@dimen/spacing_smlarge"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <RelativeLayout
                    android:id="@+id/parent_state_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:tint="@color/orange_400"
                        android:visibility="invisible"
                        />

                    <ImageView
                        android:id="@+id/state_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_nis"
                        android:tint="@android:color/holo_red_dark"
                        android:visibility="invisible" />

                </RelativeLayout>


                <com.example.mechanic2.views.Mycom.example.mechanic2.views.MyTextView
                    android:id="@+id/good_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:maxLines="5"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_60"
                    android:textStyle="bold" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/parent_car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/parent_good_name"
            android:layout_marginLeft="@dimen/spacing_smlarge"
            android:layout_marginTop="4dp"
            android:layout_marginRight="@dimen/spacing_smlarge"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:padding="4dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/car" />

                <View
                    android:layout_width="@dimen/spacing_middle"
                    android:layout_height="0dp" />

                <com.example.mechanic2.views.Mycom.example.mechanic2.views.MyTextView
