                        android:layout_alignRight="@id/car_icon"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_nis"
                        android:tint="@color/red_full"
                        android:transitionName="stokeT" />


                    <com.example.mechanic2.views.MyTextView
                        android:id="@+id/state_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/state_icon"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/factory_icon"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:lines="1"
                        android:textColor="#ff0000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:transitionName="sT" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:layout_below="@id/state_icon" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:background="@android:color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large"
                    android:paddingBottom="@dimen/spacing_large">

                    <com.example.mechanic2.views.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="توضیح صوتی"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/grey_80"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/fillet_remove_store"
                        android:gravity="center_vertical"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:gravity="center_vertical"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp">


                            <ImageView
                                android:id="@+id/ivPlayPause"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:alpha="0"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:src="@drawable/play_icon"
                                android:visibility="gone" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/ltPlayPause"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:visibility="gone"
                                app:lottie_autoPlay="false"
                                app:lottie_loop="false"
                                app:lottie_rawRes="@raw/play_to_pause"
                                app:lottie_speed="3" />

                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/startDownload"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:src="@drawable/ic_arrow_downward_black_24dp"
                                android:visibility="visible" />



                                <TextView
                                    android:layout_centerInParent="true"
                                    android:id="@+id/percentDone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:textSize="12sp" />


                                <com.hmomeni.progresscircula.ProgressCircula
                                    android:id="@+id/progressCirculaSound"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="4dp"
                                    app:pgc_indeterminate="false"
                                    app:pgc_progress="0"
                                    app:pgc_rimColor="@color/colorPrimary"
                                    app:pgc_rimWidth="2dp"
                                    app:pgc_showProgress="false"
                                    android:visibility="gone"
                                    app:pgc_speed="4"
                                    app:pgc_textColor="#006300" />

                        </RelativeLayout>

                        <SeekBar
                            android:id="@+id/sbProgress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:background="@android:color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingRight="@dimen/spacing_large"
                    android:paddingBottom="@dimen/spacing_large">

                    <com.example.mechanic2.views.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:gravity="center_vertical"
                        android:text="توضیحات"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/grey_80" />

                    <com.example.mechanic2.views.MyTextView
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/lorem_simple"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/grey_40" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/indigo_700"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layoutDirection="rtl">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_nis" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:maxLines="1"
                android:text="@string/lorem_simple"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layoutDirection="rtl">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_nis" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:maxLines="1"
                android:text="@string/lorem_simple"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layoutDirection="rtl">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_nis" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:maxLines="1"
                android:text="@string/lorem_simple"
                android:textColor="@color/white" />
        </LinearLayout>


        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center|center_horizontal"
            android:maxLines="1"
            android:text="aaa"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
