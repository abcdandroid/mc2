<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_10"
    tools:context=".activities.ShowMechanicDetailActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_ml"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:minHeight="50dp"
            app:contentScrim="?attr/colorPrimaryDark"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            app:titleEnabled="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/mechanic_images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/red_A700" />


                <com.merhold.extensiblepageindicator.ExtensiblePageIndicator
                    android:id="@+id/flexibleIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="130dp"
                    app:indicatorActiveColor="@color/red_full"
                    app:indicatorInactiveColor="@color/grey_10"
                    app:indicatorPadding="8dp"
                    app:indicatorRadius="4dp" />
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/ml"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        app:layoutDescription="@xml/activity_test_scene"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom"
        app:layout_collapseMode="pin"
        app:theme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MotionLayoutInvalidSceneFileReference">


        <RelativeLayout
            android:id="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/green_700"
            android:fitsSystemWindows="true">

            <TextView
                android:id="@+id/store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="100dp"
                android:gravity="center_vertical"
                android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ll"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:fitsSystemWindows="true"
            android:layoutDirection="rtl"
            android:minHeight="?android:attr/actionBarSize"
            android:orientation="vertical"
            android:src="@drawable/stop"
            android:textDirection="rtl" />

    </androidx.constraintlayout.motion.widget.MotionLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:background="@android:color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">


                    <com.example.mechanic2.views.MyTextView
                        android:id="@+id/my_info"
                        style="@style/TextAppearance.Subhead.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="24dp"
                        android:layoutDirection="rtl"
                        android:text="مشخصات من"
                        android:textColor="@color/grey_1000"
                        android:textSize="16sp"
                        android:transitionName="nameTxt" />

                    <ImageView
                        android:id="@+id/person_icon"
                        android:layout_width="20dp"
                        android:layout_height="14sp"
                        android:layout_below="@id/my_info"
                        android:layout_alignRight="@id/my_info"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_car3"
                        android:tint="@color/indigo_400"
                        android:transitionName="carT" />

                    <com.example.mechanic2.views.MyTextView
                        android:id="@+id/mechanic_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/person_icon"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/person_icon"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:lines="1"
                        android:textColor="@color/grey_1000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:transitionName="scT" />


                    <ImageView
                        android:id="@+id/store_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@id/person_icon"
                        android:layout_alignLeft="@id/person_icon"
                        android:layout_alignRight="@id/person_icon"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_factory2"
                        android:tint="@color/indigo_400"
                        android:transitionName="factoryT" />


                    <com.example.mechanic2.views.MyTextView
                        android:id="@+id/store_name_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/store_icon"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/store_icon"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:lines="1"
                        android:textColor="@color/grey_1000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:transitionName="cT" />


                    <ImageView
                        android:id="@+id/job_icon"
                        android:layout_width="20dp"
                        android:layout_height="22dp"
                        android:layout_below="@id/store_icon"
                        android:layout_alignLeft="@id/person_icon"
                        android:layout_alignRight="@id/person_icon"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_warranty"
                        android:tint="@color/indigo_400"
                        android:transitionName="warrantyT" />


                    <com.example.mechanic2.views.MyTextView
                        android:id="@+id/job_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/job_icon"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/store_icon"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:lines="1"
                        android:textColor="@color/grey_1000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:transitionName="wT" />


                    <ImageView
                        android:id="@+id/phone_icon"
                        android:layout_width="20dp"
                        android:layout_height="22dp"
                        android:layout_below="@id/job_icon"
                        android:layout_alignLeft="@id/person_icon"
                        android:layout_alignRight="@id/person_icon"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_nis"
                        android:tint="@color/red_full"
                        android:transitionName="stokeT" />


                    <com.example.mechanic2.views.MyTextView
                        android:id="@+id/phone_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/phone_icon"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/store_icon"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:lines="1"
                        android:textColor="#ff0000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:transitionName="sT" />

                    <ImageView
                        android:id="@+id/score_icon"
                        android:layout_width="20dp"
                        android:layout_height="22dp"
                        android:layout_below="@id/phone_icon"
                        android:layout_alignLeft="@id/person_icon"
                        android:layout_alignRight="@id/person_icon"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_nis"
                        android:tint="@color/red_full"
                        android:transitionName="stokeT" />


                    <com.example.mechanic2.views.MyTextView
                        android:id="@+id/score_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/score_icon"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/store_icon"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:lines="1"
                        android:textColor="#ff0000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:transitionName="sT" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_below="@id/score_icon" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginTop="16dp"
                android:layout_marginRight="@dimen/spacing_large"
                android:background="@android:color/white"
                app:cardCornerRadius="2dp"
                android:id="@+id/map_parent"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <org.osmdroid.views.MapView
                        android:id="@+id/mechanic_map_preview"
                        android:layout_width="100dp"
                        android:translationZ="0dp"
                        android:layout_height="100dp"
                        android:layout_margin="8dp" />


                    <com.example.mechanic2.views.MyTextView
                        android:id="@+id/region_name"
                        android:layout_toLeftOf="@id/region_icon"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/mechanic_map_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.Subhead.Bold"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="24dp"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:textColor="@color/grey_1000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:transitionName="scT" />
                    <ImageView
                        android:layout_alignTop="@id/region_name"
                        android:id="@+id/region_icon"
                        android:layout_width="20dp"
                        android:layout_centerVertical="true"
                        android:layout_height="14sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_car3"
                        android:tint="@color/indigo_400"
                        android:transitionName="carT" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/view"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginTop="16dp"
                android:layout_marginRight="@dimen/spacing_large"
                android:background="@android:color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">


                    <com.example.mechanic2.views.MyTextView
                        android:id="@+id/my_about"
                        style="@style/TextAppearance.Subhead.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="24dp"
                        android:layoutDirection="rtl"
                        android:text="درباره من"
                        android:textColor="@color/grey_1000"
                        android:textSize="16sp"
                        android:transitionName="nameTxt" />

                    <com.example.mechanic2.views.MyTextView
                        android:id="@+id/about_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/my_about"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="@string/lorem"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_below="@id/about_desc" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:background="@android:color/white"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.mechanic2.views.MyTextView
                        android:id="@+id/my_movies"
                        style="@style/TextAppearance.Subhead.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="24dp"
                        android:layoutDirection="rtl"
                        android:text="فیلم های من"
                        android:textColor="@color/grey_1000"
                        android:textSize="16sp"
                        android:transitionName="nameTxt" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerMechanicMovies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/my_movies"
                        android:background="@color/green_700" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>