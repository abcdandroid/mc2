<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/fieldCarType"
        android:layout_height="wrap_content"
        android:hint="ماشینت چیه؟ یکی رو انتخاب کن!!!"

        android:textDirection="rtl"
        android:layout_margin="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:id="@+id/carType"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/fieldGoodType"
        android:layout_height="wrap_content"
        android:hint="دنبال کدوم تیکش هستی؟"
        android:layout_below="@id/fieldCarType"
        android:textDirection="rtl"
        android:layout_margin="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:id="@+id/goodType"
            />

    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:transitionName="aaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="بفرست بره."
        android:id="@+id/submitQuestion"
        android:layout_margin="8dp"
        android:background="@drawable/fillet_add_store"
        android:layout_below="@id/fieldGoodType"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />





</RelativeLayout>