    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo_700"
        android:theme="@style/AppTheme.AppBarOverlay">


        <RelativeLayout
            app:contentInsetStartWithNavigation="0dp"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:id="@+id/submit_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/car_question"
                android:layout_alignBottom="@id/title_question"
                android:layout_alignParentLeft="true"
                android:background="@color/grey_10"
                android:gravity="center"
                android:text="جست و جو"
                android:textColor="@color/colorPrimary" />

            <AutoCompleteTextView
                android:layoutDirection="rtl"
                android:textSize="16sp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:id="@+id/car_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/submit_filter"
                android:background="@color/grey_10"
                android:hint="درباره چه ماشینی سوال داری؟"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorAccent" />

            <AutoCompleteTextView
                android:layoutDirection="rtl"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:id="@+id/title_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/car_question"
                android:layout_alignLeft="@id/car_question"
                android:layout_alignRight="@id/car_question"
                android:background="@color/grey_10"
                android:hint="موضوع سوالت چیه؟"
                android:textColorHint="@color/colorAccent" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal">


            <TextView
                android:layout_marginRight="16sp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مشاهده سوالات بر اساس:"
                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/question_filter"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:clickable="true"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سوالات من"
                android:textSize="12sp"
                android:background="@drawable/btn_round"
                android:textColor="@color/primaryText"
                android:gravity="center"
                />





        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <View
        android:id="@+id/transparent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#9AF44336" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerQuestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <RelativeLayout
        android:id="@+id/fab_parent_layout"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom">

        <LinearLayout
            android:id="@+id/fab_add_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fillet_add_store"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/plus_fab"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                app:lottie_rawRes="@raw/fab_plus2"

                />

            <TextView
                android:id="@+id/fab_add"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="افزودن سوال"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fab_my_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fillet_add_store"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/person_fab"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                app:lottie_rawRes="@raw/my_fab"

                />

            <TextView
                android:id="@+id/fab_my"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="سوالات من"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fab_main_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fillet_add_store"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/close_fab"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                app:lottie_rawRes="@raw/close_fab"

                />

            <TextView
                android:id="@+id/fab_main"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="یه چیزی بگو"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>