<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/preview_container"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="220dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/preview"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="16dp" />


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/wrench"
                app:lottie_speed="1.5" />


        </RelativeLayout>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/preview_container"
            android:layout_margin="4dp"
            android:text="@string/app_name"
            android:textDirection="rtl" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:layout_below="@id/desc">

            <ImageView
                android:id="@+id/seenIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                app:srcCompat="@drawable/ic_remove_red_eye_black_24dp" />

            <TextView
                android:id="@+id/seenCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/seenIcon"
                android:layout_toRightOf="@id/seenIcon"
                android:text="1000" />


            <ImageView
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/favorite" />

            <TextView
                android:id="@+id/totalSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:text="12mb" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/totalSize"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/percentDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="12sp"
                    />


                <com.hmomeni.progresscircula.ProgressCircula
                    android:id="@+id/progressCircula"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    app:pgc_indeterminate="false"
                    app:pgc_progress="0"
                    app:pgc_rimColor="@color/colorPrimary"
                    app:pgc_rimWidth="2dp"
                    app:pgc_showProgress="false"
                    android:layout_centerInParent="true"
                    app:pgc_speed="4"
                    app:pgc_textColor="#006300"
                    />
            </RelativeLayout>







        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>