<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:paddingTop="16dp"
        android:paddingBottom="36dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.example.mechanic2.views.MyTextView
            android:gravity="center"
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/good_not_found"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/btn_show_all_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_all_goods"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dp"
                android:src="@drawable/ic_all"
                android:tint="@color/light_green_800" />

            <com.example.mechanic2.views.MyTextView
                android:layout_centerVertical="true"
                style="@style/TextAppearance.Medium.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:text="@string/show_all_goods"
                android:textColor="@color/light_green_800" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_show_luxury_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_show_all_goods"
            android:layout_alignLeft="@id/btn_show_all_goods"
            android:layout_alignRight="@id/btn_show_all_goods"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_luxury_goods"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_diamond"
                android:tint="@color/yellow_900" />

            <com.example.mechanic2.views.MyTextView
                android:layout_margin="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/TextAppearance.Medium.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_luxury_goods"
                android:textColor="@color/yellow_900" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_show_stoke_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_show_luxury_goods"
            android:layout_alignLeft="@id/btn_show_all_goods"
            android:layout_alignRight="@id/btn_show_all_goods"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_stoke_goods"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_nis"
                android:tint="@color/red_A700" />

            <com.example.mechanic2.views.MyTextView
                android:layout_margin="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/TextAppearance.Medium.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_stoke_goods"
                android:textColor="@color/red_A700" />

        </RelativeLayout>


    </RelativeLayout>


</ScrollView>